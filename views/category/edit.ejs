<div class="text-center">
  <h2>Categoryの編集</h2>
</div>
<form action="/categories/<%= category.id %>?_method=PUT" method="POST">
  <div class="row g-3 align-items-center">
    <div class="col-auto">
      <label for="inputId" class="col-form-label">ID</label>
    </div>
    <div class="col-auto">
      <input value="<%= category.id %>" type="text" id="inputId" class="form-control" disabled>
    </div>
    <div class="col-auto">
      <label for="inputCategory" class="col-form-label">カテゴリー</label>
    </div>
    <div class="col-auto">
      <input value="<%= category.name %>" name="category" type="text" id="inputCategory" class="form-control" aria-describedby="categooryHelpInline">
    </div>
    <div class="col-auto">
      <span id="categooryHelpInline" class="form-text">
        （入力必須）
      </span>
    </div>
  </div>
  <hr class="mb-4">
  <button class="btn btn-warning" type="submit">更新</button>
</form>